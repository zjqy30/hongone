<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hone.dao.HoTokenDao">

    <resultMap id="hoTokenResultMap" type="com.hone.entity.HoToken">
        <id column="id" property="id"/> 
        <result column="token" property="token"/> 
        <result column="user_id" property="userId"/>
        <result column="create_date" property="createDate"/>
        <result column="expire_date" property="expireDate"/>
        <result column="enable_flag" property="enableFlag"/>
    </resultMap>

    <sql id="hoTokenColumns">
        a.id AS "id",
        a.token AS "token",
        a.user_id AS "userId",
        a.create_date AS "createDate",
        a.expire_date AS "expireDate",
        a.enable_flag AS "enableFlag"
    </sql>

    <sql id="hoTokenJoins">
        
    </sql>

    <select id="selectByToken" resultMap="hoTokenResultMap">
        select * from ho_token where token=#{token} and expire_date &gt; now();
    </select>


</mapper>